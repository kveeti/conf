{
  "theme": "Ros√© Pine Moon",
  "show_inline_completions": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "always_treat_brackets_as_autoclosed": false,
  //
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 17,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_line_height": "comfortable",
  "hard_tabs": true,
  "cursor_blink": false,
  //
  "when_closing_with_no_tabs": "keep_window_open",
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": false
  },
  "preview_tabs": {
    "enabled": false
  },
  "toolbar": {
    "quick_actions": false,
    "breadcrumbs": false
  },
  //
  "scrollbar": {
    "show": "never"
  },
  "project_panel": {
    "dock": "right",
    "indent_size": 15,
    "button": false
  },
  //
  "terminal": {
    "dock": "left",
    "blinking": "off",
    "env": {
      "GIT_EDITOR": "zed --wait"
    }
  }
}
