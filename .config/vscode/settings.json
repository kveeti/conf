{
  // -- some customization --
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": null,
  "editor.fontSize": 15,
  "editor.lineHeight": 1.6,
  "editor.fontWeight": "400",
  "editor.fontFamily": "JetBrains Mono Nerd Font",
  "editor.fontLigatures": false,
  "editor.cursorBlinking": "solid",

  "editor.stickyScroll.enabled": true,
  "editor.renderWhitespace": "all",
  "editor.bracketPairColorization.enabled": false,
  "explorer.compactFolders": false,
  "breadcrumbs.enabled": false,
  "window.commandCenter": false,
  "editor.suggest.showStatusBar": false,
  "workbench.sideBar.location": "right",
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.panel.defaultLocation": "right",
  "workbench.layoutControl.enabled": false,
  "window.titleBarStyle": "custom",
  "window.title": "${folderPath}",
  "editor.lineNumbers": "relative",
  "window.closeWhenEmpty": false,
  "editor.glyphMargin": false,
  "editor.showFoldingControls": "never",
  "editor.minimap.enabled": false,
  "editor.scrollbar.horizontalScrollbarSize": 0,
  "editor.scrollbar.verticalScrollbarSize": 0,
  "zenMode.fullScreen": false,
  "editor.overviewRulerBorder": false,
  "workbench.panel.showLabels": false,
  "terminal.integrated.fontSize": 15,
  // -- some customization --

  // -- disable tabs --
  "explorer.openEditors.visible": 1,
  "explorer.openEditors.minVisible": 1,
  "workbench.editor.showTabs": "none",
  "zenMode.showTabs": "none",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 1,
  "workbench.editor.limit.perEditorGroup": true,
  // -- disable tabs --

  // -- autocompletion --
  "editor.tabCompletion": "off",
  "editor.inlineSuggest.enabled": true,
  "editor.wordBasedSuggestions": "off",
  "editor.suggestOnTriggerCharacters": false,
  "editor.quickSuggestions": {
    "comments": "off",
    "strings": "on"
  },
  "editor.linkedEditing": true,
  "editor.autoClosingBrackets": "always",
  // -- autocompletion --

  // -- on save --
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  // -- on save --

  // -- formatting --
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.useEditorConfig": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.autoIndent": "advanced",
    "editor.detectIndentation": true
  },
  // -- formatting --

  // -- languages --
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.workspaceSymbols.excludeLibrarySymbols": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.workspaceSymbols.scope": "currentProject",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.surveys.enabled": false,

  "rust-analyzer.showUnlinkedFileNotification": false,
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.inlayHints.renderColons": false,
  // -- languages --

  // -- vim
  "vim.statusBarColorControl": false,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.cursorStylePerMode.insert": "line-thin",
  "vim.foldfix": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },

  "vim.leader": "<space>",
  // this ideally won't contain any vscode commands
  // i want those to be defined in keybinds.json
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["c-d"],
      "after": ["c-d", "z", "z"]
    },
    {
      "before": ["c-u"],
      "after": ["c-u", "z", "z"]
    },
    {
      "before": ["u"],
      "commands": ["undo"]
    },
    {
      "before": ["c-r"],
      "commands": ["redo"]
    },
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    }
  ],

  // copilot
  "github.copilot.nextEditSuggestions.enabled": true,

  "telemetry.telemetryLevel": "off",
  "explorer.confirmDragAndDrop": true,
  "explorer.confirmDelete": true,
  "editor.detectIndentation": true,
  "editor.largeFileOptimizations": true,
  "editor.accessibilitySupport": "off",
  "editor.pasteAs.enabled": false,
  "workbench.enableExperiments": false,
  "workbench.editor.closeOnFileDelete": true,
  "security.workspace.trust.untrustedFiles": "open",
  "diffEditor.ignoreTrimWhitespace": false,
  "extensions.ignoreRecommendations": true,
  "files.eol": "\n",
  "git.openRepositoryInParentFolders": "never",
  "workbench.startupEditor": "none",
  "files.exclude": {
    "/node_modules": true,
    "/target": true
  },
  "accessibility.signals.terminalBell": {
    "sound": "off",
    "announcement": "off"
  },
  "extensions.autoUpdate": false,
  "git.confirmSync": false,
  "search.smartCase": true,
  "workbench.activityBar.location": "hidden",
  "search.searchEditor.defaultNumberOfContextLines": 5,
  "search.seedWithNearestWord": true
}
