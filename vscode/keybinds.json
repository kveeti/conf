[
  // moving between splits / groups with ctrl + hjkl
  {
    "command": "workbench.action.focusLeftGroup",
    "when": "listFocus || editorTextFocus && vim.active && vim.mode != 'Insert'",
    "key": "ctrl+h"
  },
  {
    "command": "workbench.action.focusRightGroup",
    "when": "listFocus || editorTextFocus && vim.active && vim.mode != 'Insert'",
    "key": "ctrl+l"
  },
  {
    "command": "workbench.action.focusAboveGroup",
    "when": "listFocus || editorTextFocus && vim.active && vim.mode != 'Insert'",
    "key": "ctrl+k"
  },
  {
    "command": "workbench.action.focusBelowGroup",
    "when": "listFocus || editorTextFocus && vim.active && vim.mode != 'Insert'",
    "key": "ctrl+j"
  },
  // --

  // next & prev in menus (ctrl + n & ctrl + p)
  {
    "command": "search.action.focusNextSearchResult",
    "when": "activeViewlet == 'workbench.view.search'",
    "key": "ctrl+n"
  },
  {
    "command": "search.action.focusPreviousSearchResult",
    "when": "activeViewlet == 'workbench.view.search'",
    "key": "ctrl+p"
  },
  {
    "command": "workbench.action.quickOpenNavigateNextInFilePicker",
    "when": "inQuickOpen",
    "key": "ctrl+n"
  },
  {
    "command": "workbench.action.quickOpenNavigatePreviousInFilePicker",
    "when": "inQuickOpen",
    "key": "ctrl+p"
  },
  // --

  {
    "command": "editor.action.showHover",
    "when": "editorTextFocus",
    "key": "shift+k"
  },

  // make some vim normal mode bindings to work everywhere
  {
    "key": "space e",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "!inputFocus"
  },
  {
    "key": "space f",
    "command": "workbench.action.quickOpen",
    "when": "!inputFocus"
  },
  {
    "key": "space p",
    "command": "workbench.action.showCommands",
    "when": "!inputFocus"
  },
  // --

  // file explorer binds
  {
    "key": "r",
    "command": "renameFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "n",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "shift+n",
    "command": "explorer.newFolder",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "d",
    "command": "deleteFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  }
  // --
]
